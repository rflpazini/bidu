{
  "name": "bidu",
  "version": "1.0.0",
  "description": "Bidu is an API that provides your Horoscope and Ascendant (Rising sign) ♉️",
  "main": "index.js",
  "repository": "https://github.com/rflpazini/bidu",
  "author": "Rafael Pazini <rflpazini@gmail.com> <https://medium.com/@rflpazini>",
  "license": "MIT",
  "scripts": {
    "start": "nodemon --inspect=0.0.0.0 ./app.js",
    "start:prod": "node ./app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest && codecov",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "migrate": "node ./bin/migrate.js",
    "format": "prettier --trailing-comma es5 --single-quote --write 'src/*/*.js' 'test/*/*.js' 'src/*/!(node_modules)/**/*.js'",
    "travis:pipeline": "npm test && npm run lint && docker build --tag build-local-travis ."
  },
  "devDependencies": {
    "eslint": "^6.0.1",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "knex": "^0.19.4",
    "lint-staged": "^9.2.0",
    "node-cmd": "^3.0.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "superagent": "^5.1.0",
    "supertest": "^4.0.2",
    "testcontainers": "^2.0.0"
  },
  "dependencies": {
    "bcrypt": "^3.0.6",
    "bluebird": "^3.5.5",
    "body-parser": "^1.19.0",
    "chalk": "^2.4.2",
    "cheerio": "^1.0.0-rc.3",
    "express": "^4.17.1",
    "http-errors": "^1.7.3",
    "jsonwebtoken": "^8.5.1",
    "migrate": "^1.6.2",
    "moment": "^2.24.0",
    "pg": "^7.12.1",
    "qs": "^6.7.0",
    "sql-template-strings": "^2.2.2",
    "uuid": "^3.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,css,html}": [
      "prettier --trailing-comma es5 --single-quote --write",
      "npm run lint",
      "git add"
    ],
    "yarn.lock": [
      "git rm --cached"
    ]
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/config/"
    ]
  }
}
